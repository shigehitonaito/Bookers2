<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/dff26a28eb.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
            <h1>Bookers</h1>
          </nav>
          <nav>
            <% if user_signed_in? %>
              <ul class="nav navbar-nav navbar-right">
                <li><span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", user_path(current_user.id) %></span></li>
                <li><span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to "Users", users_path %></span></li>
                <li><span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to "Books", books_path %></span></li>
                <li><span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to "logout", destroy_user_session_path, method: :delete  %></span></li>
              </ul>
            <% else %>
              <ul class="nav navbar-nav navbar-right">
                <li><span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", root_path %></span></li>
                <li><span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to "About", about_path %></span></li>
                <li><span class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to "sign up", new_user_registration_path %></span></li>
                <li><span class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to "login", new_user_session_path %></span></li>
              </ul>
            <% end %>
          </nav>

    </header>



    <%= yield %>

  </body>
</html>
