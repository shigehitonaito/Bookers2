

<div class="container">
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <h2><%= @book.errors.count %>error</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
<div class="col-xs-3">
  <%= render 'users/list', user: @user %>
  <%= render 'books/list', book:@book %>
</div>
<div class="col-xs-9">
  <h1>Books</h1>
<%= render 'books/text', books:@books %>
</div>
</div>
</div>
